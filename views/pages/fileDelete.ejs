<%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <%- include("../partials/errors.ejs") %>
    <main>
        <form action="/file/<%= file.id %>/delete" method="post">
        <fieldset>
            <legend>Delete file</legend>
            <div class="delete-container">
                <p id="deleteHint">Enter 'delete file' to confirm deletion of '<%= file.name %>'. <strong>Warning:</strong> You can't undo this action. </p>
                <div>
                    <label for="deleteMsg">Delete confirmation</label>
                    <input type="text" id="deleteMsg" name="deleteMsg" aria-describedby="deleteHint" required>
                </div>
            </div>
            <div class="btn-container">
                <button type="submit">Submit</button>
                <a href="/file/<%= file.id %>">Cancel</a>
            </div>
        </fieldset>
    </form>
    </main>
</body>
</html>